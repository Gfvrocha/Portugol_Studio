programa
{	/*
	Exercício 015 - Programa para identificar a idade do usuario, para direcionar se 
     nescessário fila preferencial do banco.
     Autor: Felipe Rocha
     
     */  
	inclua biblioteca Calendario --> c
	funcao inicio()
	{	
		inteiro ano
		
		escreva("{ EXERCÍCIO 015 - Fila de Banco }\n")
		
		escreva("Em que ano você nasceu? ")
		leia(ano)
		
		se (ano >= 1957) {
			inteiro idade = c.ano_atual() - ano
		escreva("Você tem " + idade + " anos, certo? Seja bem-vindo(a) ao Banco Estudonauta. \n")
		}
		se (ano <=1956) {
			inteiro idade = c.ano_atual() - ano
			escreva("Você tem " + idade + " anos, certo? Seja bem-vindo(a) ao Banco Estudonauta. \n\n")
			escreva("======== ATENÇÃO! DIRIJA-SE PARA A FILA PREFERENCIAL! ========\n")
		}
		
		
	}
}