programa
{
	inclua biblioteca Util --> u
	
	funcao inicio()
	{

		inteiro vet[10], c = 0
		vet[0] = 3

		escreva("{ Exerc√≠cio 055 - O dobro do anterior }\n")

		para(inteiro pos = 1; pos < u.numero_elementos(vet); pos++){
			vet[pos] = vet[pos-1] * 2
									
		}
		escreva("O vetor gerado com os valores:\n")
		para(inteiro pos = 0; pos < u.numero_elementos(vet); pos++){
			
			escreva(c,":{",vet[pos],"}" , " ")
			u.aguarde(300)	
		c++		
		}
	}
}